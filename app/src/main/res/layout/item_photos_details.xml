<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/imageViewPhotosDetails"
        android:layout_width="61dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_killer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/itemTextViewPhotosDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@id/imageViewPhotosDetails"
        app:layout_constraintStart_toEndOf="@id/imageViewPhotosDetails"
        app:layout_constraintTop_toTopOf="@id/imageViewPhotosDetails"
        android:text="Photo"
        android:textSize="15sp"
        android:textColor="@color/black"
        />

</androidx.constraintlayout.widget.ConstraintLayout>